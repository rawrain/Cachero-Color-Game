<Window x:Name="loginWindow" x:Class="Cachero_Color_Game.logWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cachero_Color_Game"
        mc:Ignorable="d"
        Title="logWindow" Height="229" Width="458" Activated="loginWindow_Activated">
    <Grid>
        <TextBox x:Name="uNameTbx" HorizontalAlignment="Left" Margin="93,45,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="316"/>
        <PasswordBox x:Name="uPassTbx" HorizontalAlignment="Left" Margin="94,80,0,0" VerticalAlignment="Top" Width="315"/>
        <Label x:Name="uNameLbl" Content="Username" HorizontalAlignment="Left" Margin="25,41,0,0" VerticalAlignment="Top"/>
        <Label x:Name="uPassLbl" Content="Password" HorizontalAlignment="Left" Margin="25,76,0,0" VerticalAlignment="Top"/>
        <Button x:Name="logInBtn" Content="Log In" HorizontalAlignment="Left" Margin="346,150,0,0" VerticalAlignment="Top" Width="63" Click="logInBtn_Click"/>
        <Label x:Name="userIDHol" Visibility="Hidden" Content="" HorizontalAlignment="Left" Margin="25,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
